<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.angcyo.doodle.DoodleView
        android:id="@+id/doodle_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintDimensionRatio="1:1" />

    <com.angcyo.widget.layout.DslFlowLayout
        android:id="@+id/control_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/doodle_view"
        app:r_flow_item_horizontal_space="@dimen/lib_dpi"
        app:r_flow_item_vertical_space="@dimen/lib_dpi">

        <com.angcyo.widget.DslButton
            android:id="@+id/clear_button"
            style="@style/DefaultButtonStyleNormal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="清除" />

        <com.angcyo.widget.DslButton
            android:id="@+id/undo_button"
            style="@style/DefaultButtonStyleNormal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="撤销" />

        <com.angcyo.widget.DslButton
            android:id="@+id/redo_button"
            style="@style/DefaultButtonStyleNormal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="重做" />

        <com.angcyo.widget.DslButton
            android:id="@+id/background_button"
            style="@style/DefaultButtonStyleNormal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="背景" />

        <com.angcyo.widget.DslButton
            android:id="@+id/size_button"
            style="@style/DefaultButtonStyleNormal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="大小" />

        <com.angcyo.widget.DslButton
            android:id="@+id/color_button"
            style="@style/DefaultButtonStyleNormal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="颜色" />

        <com.angcyo.widget.DslButton
            android:id="@+id/eraser_button"
            style="@style/DefaultButtonStyleNormal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="橡皮擦" />

        <com.angcyo.widget.DslButton
            android:id="@+id/mosaic_button"
            style="@style/DefaultButtonStyleNormal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="马赛克" />

        <com.angcyo.widget.DslButton
            android:id="@+id/debug_button"
            style="@style/DefaultButtonStyleNormal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="调试笔" />

        <com.angcyo.widget.DslButton
            android:id="@+id/normal_button"
            style="@style/DefaultButtonStyleNormal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="普通笔" />

        <com.angcyo.widget.DslButton
            android:id="@+id/pen_button"
            style="@style/DefaultButtonStyleNormal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="钢笔" />

        <com.angcyo.widget.DslButton
            android:id="@+id/zen_button"
            style="@style/DefaultButtonStyleNormal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="!毛笔" />

        <com.angcyo.widget.DslButton
            android:id="@+id/zen_oval_button"
            style="@style/DefaultButtonStyleNormal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="!毛笔-Oval" />

        <com.angcyo.widget.DslButton
            android:id="@+id/zen_path_button"
            style="@style/DefaultButtonStyleNormal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="!毛笔-Path" />

        <com.angcyo.widget.DslButton
            android:id="@+id/zen_circle_button"
            style="@style/DefaultButtonStyleNormal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="毛笔-Circle" />

        <com.angcyo.widget.DslButton
            android:id="@+id/bitmap_brush_button"
            style="@style/DefaultButtonStyleNormal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="图片笔刷" />

        <com.angcyo.widget.DslButton
            android:id="@+id/image_button"
            style="@style/DefaultButtonStyleNormal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="图片" />

    </com.angcyo.widget.layout.DslFlowLayout>

</androidx.constraintlayout.widget.ConstraintLayout>