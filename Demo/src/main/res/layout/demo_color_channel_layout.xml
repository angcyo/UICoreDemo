<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.angcyo.widget.layout.DslFlowLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/image_view"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:scaleType="centerInside"
            tools:srcCompat="@drawable/face" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/red_image_view"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:scaleType="centerInside"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            tools:srcCompat="@drawable/face" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/green_image_view"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:scaleType="centerInside"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            tools:srcCompat="@drawable/face" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/blue_image_view"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:scaleType="centerInside"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            tools:srcCompat="@drawable/face" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/alpha_image_view"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:scaleType="centerInside"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            tools:srcCompat="@drawable/face" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/engrave_image_view"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:scaleType="centerInside"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            tools:srcCompat="@drawable/face" />

    </com.angcyo.widget.layout.DslFlowLayout>


    <com.angcyo.widget.DslButton
        android:id="@+id/select_button"
        style="@style/DefaultButtonStyleNormal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/lib_hdpi"
        android:text="选择图片"
        app:layout_constraintTop_toTopOf="parent" />

    <com.angcyo.widget.DslButton
        android:id="@+id/red_channel_button"
        style="@style/DefaultButtonStyleNormal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/lib_hdpi"
        android:text="红色通道"
        app:layout_constraintTop_toBottomOf="@id/select_button" />

    <com.angcyo.widget.DslButton
        android:id="@+id/green_channel_button"
        style="@style/DefaultButtonStyleNormal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/lib_hdpi"
        android:text="绿色通道"
        app:layout_constraintTop_toBottomOf="@id/red_channel_button" />

    <com.angcyo.widget.DslButton
        android:id="@+id/blue_channel_button"
        style="@style/DefaultButtonStyleNormal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/lib_hdpi"
        android:text="蓝色通道"
        app:layout_constraintTop_toBottomOf="@id/green_channel_button" />

    <com.angcyo.widget.DslButton
        android:id="@+id/alpha_channel_button"
        style="@style/DefaultButtonStyleNormal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/lib_hdpi"
        android:text="透明通道"
        app:layout_constraintTop_toBottomOf="@id/blue_channel_button" />

    <com.angcyo.widget.DslButton
        android:id="@+id/engrave_channel_button"
        style="@style/DefaultButtonStyleNormal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/lib_hdpi"
        android:text="雕刻数据"
        app:layout_constraintTop_toBottomOf="@id/alpha_channel_button" />

</androidx.constraintlayout.widget.ConstraintLayout>