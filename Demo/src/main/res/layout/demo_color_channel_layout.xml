<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/transparent10">

    <com.angcyo.widget.layout.DslFlowLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">

        <com.angcyo.uicore.demo.draw.MeshImageView
            android:id="@+id/image_view"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:scaleType="centerInside"
            tools:srcCompat="@drawable/face" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/red_image_view"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:scaleType="centerInside"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            tools:srcCompat="@drawable/face" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/green_image_view"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:scaleType="centerInside"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            tools:srcCompat="@drawable/face" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/blue_image_view"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:scaleType="centerInside"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            tools:srcCompat="@drawable/face" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/alpha_image_view"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:background="@color/transparent20"
            android:scaleType="centerInside"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            tools:srcCompat="@drawable/face" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/engrave_image_view"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:scaleType="centerInside"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            tools:srcCompat="@drawable/face" />

    </com.angcyo.widget.layout.DslFlowLayout>

    <com.angcyo.widget.DslButton
        android:id="@+id/select_button"
        style="@style/DefaultButtonStyleNormal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/lib_hdpi"
        android:text="选择图片"
        app:layout_constraintTop_toTopOf="parent" />

    <com.angcyo.widget.DslButton
        android:id="@+id/red_channel_button"
        style="@style/DefaultButtonStyleNormal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/lib_hdpi"
        android:text="红色通道"
        app:layout_constraintTop_toBottomOf="@id/select_button" />

    <com.angcyo.widget.DslButton
        android:id="@+id/green_channel_button"
        style="@style/DefaultButtonStyleNormal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/lib_hdpi"
        android:text="绿色通道"
        app:layout_constraintTop_toBottomOf="@id/red_channel_button" />

    <com.angcyo.widget.DslButton
        android:id="@+id/blue_channel_button"
        style="@style/DefaultButtonStyleNormal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/lib_hdpi"
        android:text="蓝色通道"
        app:layout_constraintTop_toBottomOf="@id/green_channel_button" />

    <com.angcyo.widget.DslButton
        android:id="@+id/alpha_channel_button"
        style="@style/DefaultButtonStyleNormal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/lib_hdpi"
        android:text="透明通道"
        app:layout_constraintTop_toBottomOf="@id/blue_channel_button" />

    <com.angcyo.widget.DslButton
        android:id="@+id/engrave_channel_button"
        style="@style/DefaultButtonStyleNormal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/lib_hdpi"
        android:text="雕刻数据"
        app:layout_constraintTop_toBottomOf="@id/alpha_channel_button" />

    <com.angcyo.widget.DslButton
        android:id="@+id/gray_button"
        style="@style/DefaultButtonStyleNormal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/lib_hdpi"
        android:text="灰度"
        app:layout_constraintTop_toBottomOf="@id/engrave_channel_button" />

    <com.angcyo.widget.DslButton
        android:id="@+id/black_white_button"
        style="@style/DefaultButtonStyleNormal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/lib_hdpi"
        android:text="黑白"
        app:layout_constraintTop_toBottomOf="@id/gray_button" />

    <!--text test-->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/lp_text_view1"
            style="@style/LibBodyTextStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="LaserPecker" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/lp_text_view2"
            style="@style/LibBodyTextStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="LaserPecker" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/lp_text_view3"
            style="@style/LibBodyTextStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="LaserPecker" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/lp_text_view4"
            style="@style/LibBodyTextStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="LaserPecker" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/lp_result_view"
            style="@style/LibBodyTextStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="..." />

        <com.angcyo.widget.DslButton
            android:id="@+id/get_bounds_button"
            style="@style/DefaultButtonStyleNormal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/lib_hdpi"
            android:text="getBounds" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>