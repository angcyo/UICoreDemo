<?xml version="1.0" encoding="utf-8"?>
<com.angcyo.widget.layout.DslFlowLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/lib_xhdpi"
    app:r_flow_item_horizontal_space="@dimen/lib_xhdpi"
    app:r_flow_item_vertical_space="@dimen/lib_xhdpi">

    <com.angcyo.widget.DslButton
        android:id="@+id/wait_forever_state_button"
        style="@style/DefaultButtonMinStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="一直等待状态" />

    <com.angcyo.widget.DslButton
        android:id="@+id/wait_state_button"
        style="@style/DefaultButtonMinStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="等待状态" />

    <com.angcyo.widget.DslButton
        android:id="@+id/wait_state_value_button"
        style="@style/DefaultButtonMinStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="等待状态特定值" />

    <com.angcyo.widget.DslButton
        android:id="@+id/change_state_button"
        style="@style/DefaultButtonMinStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="改变状态" />

    <com.angcyo.widget.DslButton
        android:id="@+id/change_state_value_button"
        style="@style/DefaultButtonMinStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="改变特定值状态" />

</com.angcyo.widget.layout.DslFlowLayout>