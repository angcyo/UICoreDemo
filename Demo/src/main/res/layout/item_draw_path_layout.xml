<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.angcyo.uicore.demo.draw.DrawPathView
        android:id="@+id/draw_path_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintDimensionRatio="1:1" />

    <com.angcyo.widget.progress.DslSeekBar
        android:id="@+id/seek_bar"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:paddingLeft="@dimen/lib_xxhdpi"
        android:paddingRight="@dimen/lib_xxhdpi"
        app:layout_constraintTop_toBottomOf="@id/draw_path_view"
        app:progress_height="5dp"
        app:progress_show_text="true"
        app:seek_thumb_over_height="8dp" />

</androidx.constraintlayout.widget.ConstraintLayout>