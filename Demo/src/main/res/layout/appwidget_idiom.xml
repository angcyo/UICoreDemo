<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/lib_root_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/lib_hdpi"
    android:background="@drawable/lib_tran_round_common_shape">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/lib_hdpi">

        <TextView
            android:id="@+id/lib_tip_view"
            style="@style/LibTitleTextStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/lib_white"
            android:textSize="@dimen/text_little_size"
            tools:text="正在加载..." />

        <TextView
            android:id="@+id/lib_title_view"
            style="@style/LibTitleTextStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="正在加载..."
            android:textColor="@color/lib_white" />

        <TextView
            android:id="@+id/lib_body_view"
            style="@style/LibBodyTextStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/lib_hdpi"
            android:text="数据请求中..."
            android:textColor="@color/lib_white_dark" />

        <TextView
            android:id="@+id/lib_des_view"
            style="@style/LibBodyTextStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/lib_hdpi"
            android:textColor="@color/lib_white_press"
            tools:text="数据请求中..." />

        <TextView
            android:id="@+id/statistics_view"
            style="@style/LibSubTextStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/lib_hdpi"
            android:textColor="@color/lib_dark_bg"
            android:textSize="@dimen/text_min_size"
            tools:text="数据请求中..." />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/history_view"
            android:layout_width="@dimen/lib_normal_icon_size"
            android:layout_height="@dimen/lib_normal_icon_size"
            android:background="@drawable/lib_tran_white_bg2_selector"
            android:padding="@dimen/lib_hdpi"
            android:src="@drawable/ic_history_svg"
            android:tint="@color/lib_white" />

        <ImageView
            android:id="@+id/lib_image_view"
            android:layout_width="@dimen/lib_normal_icon_size"
            android:layout_height="@dimen/lib_normal_icon_size"
            android:background="@drawable/lib_tran_white_bg2_selector"
            android:padding="@dimen/lib_ldpi"
            android:scaleType="fitXY"
            android:src="@drawable/ic_refresh_svg"
            android:tint="@color/lib_white" />

    </LinearLayout>

</FrameLayout>