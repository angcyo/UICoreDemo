<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/action_bar_height">

    <com.angcyo.crop.CropView
        android:id="@+id/crop_image_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#000"
        android:scaleType="matrix"
        android:src="@drawable/face" />

    <com.angcyo.widget.layout.DslFlowLayout
        android:id="@+id/control_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/lib_hdpi"
        app:layout_constraintBottom_toBottomOf="parent"
        app:r_flow_item_horizontal_space="@dimen/lib_dpi"
        app:r_flow_item_vertical_space="@dimen/lib_dpi">

        <com.angcyo.widget.DslButton
            android:id="@+id/reset_button"
            style="@style/DefaultButtonStyleNormal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="恢复" />

        <com.angcyo.widget.DslButton
            android:id="@+id/image_button"
            style="@style/DefaultButtonStyleNormal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="图片" />

        <com.angcyo.widget.DslButton
            android:id="@+id/type_button"
            style="@style/DefaultButtonStyleNormal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="type" />

        <com.angcyo.widget.DslButton
            android:id="@+id/flip_horizontal_button"
            style="@style/DefaultButtonStyleNormal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="水平翻转" />

        <com.angcyo.widget.DslButton
            android:id="@+id/flip_vertical_button"
            style="@style/DefaultButtonStyleNormal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="垂直翻转" />

        <com.angcyo.widget.DslButton
            android:id="@+id/rotate_button"
            style="@style/DefaultButtonStyleNormal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="旋转" />

        <com.angcyo.widget.DslButton
            android:id="@+id/free_button"
            style="@style/DefaultButtonStyleNormal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="自由比例" />

        <com.angcyo.widget.DslButton
            android:id="@+id/origin_ratio_button"
            style="@style/DefaultButtonStyleNormal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="原始比例" />

        <com.angcyo.widget.DslButton
            android:id="@+id/ratio_11_button"
            style="@style/DefaultButtonStyleNormal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1:1" />

        <com.angcyo.widget.DslButton
            android:id="@+id/ratio_169_button"
            style="@style/DefaultButtonStyleNormal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="16:9" />

        <com.angcyo.widget.DslButton
            android:id="@+id/ratio_34_button"
            style="@style/DefaultButtonStyleNormal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3:4" />

        <com.angcyo.widget.DslButton
            android:id="@+id/crop_button"
            style="@style/DefaultButtonStyleNormal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="剪裁" />

    </com.angcyo.widget.layout.DslFlowLayout>

    <com.angcyo.widget.image.AlphaImageView
        android:id="@+id/image_view"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:scaleType="fitCenter" />

</androidx.constraintlayout.widget.ConstraintLayout>