<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/canvas_top_round_shape">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/preview_view"
            style="@style/LibTitleTextStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|left"
            android:background="@drawable/lib_bg2_selector"
            android:minHeight="@dimen/lib_item_min_height"
            android:paddingHorizontal="@dimen/lib_xhdpi"
            android:text="@string/canvas_preview"
            android:textColor="@color/canvas_primary" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/lib_title_view"
            style="@style/LibTitleTextStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:minHeight="@dimen/lib_item_min_height"
            android:text="@string/canvas_regulate" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/confirm_view"
            style="@style/LibTitleTextStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|right"
            android:background="@drawable/lib_bg2_selector"
            android:minHeight="@dimen/lib_item_min_height"
            android:paddingHorizontal="@dimen/lib_xhdpi"
            android:text="@string/canvas_confirm"
            android:textColor="@color/canvas_primary" />

    </FrameLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/lib_line"
        android:background="@color/canvas_line" />

    <com.angcyo.widget.recycler.DslRecyclerView
        android:id="@+id/lib_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="6dp"
        android:background="@drawable/canvas_bottom_round_shape"
        app:r_layout_manager="v"
        app:r_max_height="0.5sh" />

</LinearLayout>