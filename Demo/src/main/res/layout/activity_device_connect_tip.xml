<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/lib_dialog_root_layout"
    android:layout_width="match_parent"
    android:layout_height="220dp"
    android:layout_gravity="bottom"
    android:layout_margin="@dimen/lib_xxhdpi"
    android:background="@drawable/dialog_white_round_common_bg_shape"
    android:fitsSystemWindows="true">

    <com.angcyo.widget.TextPathAnimateView
        android:id="@+id/text_animate_view"
        style="@style/LibBodyTextStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@id/lib_des_view"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed"
        app:r_path_animate_text="LaserPecker"
        app:r_path_text_size="60dp" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/lib_des_view"
        style="@style/LibMainTextStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/lib_xhdpi"
        android:padding="@dimen/lib_xhdpi"
        android:text="已连接 LaserPecker"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@id/control_layout"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/text_animate_view"
        tools:visibility="visible" />

    <LinearLayout
        android:id="@+id/control_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/lib_xhdpi"
        android:orientation="horizontal"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/lib_des_view"
        tools:visibility="visible">

        <com.angcyo.widget.DslButton
            android:id="@+id/finish_button"
            style="@style/LibButtonBorderStyle"
            android:layout_width="120dp"
            android:layout_height="50dp"
            android:text="完成" />

        <com.angcyo.widget.DslButton
            android:id="@+id/setting_button"
            style="@style/LibButtonSolidStyle"
            android:layout_width="120dp"
            android:layout_height="50dp"
            android:layout_marginLeft="@dimen/lib_xxhdpi"
            android:text="设置" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>