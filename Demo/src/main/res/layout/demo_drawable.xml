<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/lib_hdpi">

    <com.angcyo.widget.layout.DslFlowLayout
        android:id="@+id/flow1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:r_flow_item_horizontal_space="@dimen/lib_hdpi"
        app:r_flow_item_vertical_space="@dimen/lib_hdpi">

        <androidx.appcompat.widget.AppCompatRadioButton
            style="@style/LibBodyTextStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CheckBox" />

        <androidx.appcompat.widget.AppCompatRadioButton
            style="@style/LibBodyTextStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:button="@drawable/lib_check_circle_selector"
            android:buttonTint="@color/colorAccent"
            android:paddingLeft="@dimen/lib_check_box_ico_padding"
            android:text="CheckBox" />

        <androidx.appcompat.widget.AppCompatRadioButton
            style="@style/LibBodyTextStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:button="@drawable/lib_check_circle_fill_selector"
            android:buttonTint="@color/colorAccent"
            android:paddingLeft="@dimen/lib_check_box_ico_padding"
            android:text="CheckBox" />

        <androidx.appcompat.widget.AppCompatRadioButton
            style="@style/LibBodyTextStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:button="@drawable/lib_check_rect_selector"
            android:paddingLeft="@dimen/lib_check_box_ico_padding"
            android:text="CheckBox" />

        <androidx.appcompat.widget.AppCompatRadioButton
            style="@style/LibBodyTextStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:button="@drawable/lib_check_rect_fill_selector"
            android:paddingLeft="@dimen/lib_check_box_ico_padding"
            android:text="CheckBox" />

    </com.angcyo.widget.layout.DslFlowLayout>

    <com.angcyo.widget.layout.DslFlowLayout
        android:id="@+id/flow2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/flow1"
        app:r_flow_item_horizontal_space="@dimen/lib_hdpi"
        app:r_flow_item_vertical_space="@dimen/lib_hdpi">

        <androidx.appcompat.widget.AppCompatCheckBox
            style="@style/LibBodyTextStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CheckBox" />

        <androidx.appcompat.widget.AppCompatCheckBox
            style="@style/LibBodyTextStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:button="@drawable/lib_check_circle_selector"
            android:paddingLeft="@dimen/lib_check_box_ico_padding"
            android:text="CheckBox" />

        <androidx.appcompat.widget.AppCompatCheckBox
            style="@style/LibBodyTextStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:button="@drawable/lib_check_circle_fill_selector"
            android:paddingLeft="@dimen/lib_check_box_ico_padding"
            android:text="CheckBox" />

        <androidx.appcompat.widget.AppCompatCheckBox
            style="@style/LibBodyTextStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:button="@drawable/lib_check_rect_selector"
            android:buttonTint="@color/colorAccent"
            android:paddingLeft="@dimen/lib_check_box_ico_padding"
            android:text="CheckBox" />

        <androidx.appcompat.widget.AppCompatCheckBox
            style="@style/LibBodyTextStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:button="@drawable/lib_check_rect_fill_selector"
            android:buttonTint="@color/colorAccent"
            android:paddingLeft="@dimen/lib_check_box_ico_padding"
            android:text="CheckBox" />

    </com.angcyo.widget.layout.DslFlowLayout>

    <com.angcyo.widget.layout.DslFlowLayout
        android:id="@+id/flow3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/flow2"
        app:r_flow_item_horizontal_space="@dimen/lib_hdpi"
        app:r_flow_item_vertical_space="@dimen/lib_hdpi">

        <com.angcyo.widget.StrokeHaloView
            android:layout_width="match_parent"
            android:layout_height="80dp" />

    </com.angcyo.widget.layout.DslFlowLayout>

</androidx.constraintlayout.widget.ConstraintLayout>